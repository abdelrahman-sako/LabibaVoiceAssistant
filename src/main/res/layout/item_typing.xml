<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:id="@+id/typingParentLayout"
    android:minWidth="60dp"
    android:minHeight="35dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp">

    <View
        android:id="@+id/typingDotOne"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:transformPivotX="4dp"
        android:transformPivotY="4dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shape_typing_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/typingDotTwo"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/typingDotTwo"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:transformPivotX="4dp"
        android:transformPivotY="4dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shape_typing_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/typingDotThree"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/typingDotOne"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/typingDotThree"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:transformPivotX="4dp"
        android:transformPivotY="4dp"
        android:background="@drawable/shape_typing_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/typingDotTwo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
