<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/item_video_image_filter_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="14dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_40"
        app:round="14dp"
        app:layout_constraintStart_toStartOf="@id/item_video_image_filter_view"
        app:layout_constraintEnd_toEndOf="@id/item_video_image_filter_view"
        app:layout_constraintTop_toTopOf="@id/item_video_image_filter_view"
        app:layout_constraintBottom_toBottomOf="@id/item_video_image_filter_view"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_play"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_video_image_filter_view"
        app:layout_constraintEnd_toEndOf="@+id/item_video_image_filter_view"
        app:layout_constraintStart_toStartOf="@+id/item_video_image_filter_view"
        app:layout_constraintTop_toTopOf="@+id/item_video_image_filter_view" />


</androidx.constraintlayout.widget.ConstraintLayout>